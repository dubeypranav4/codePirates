<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="path">logs</Property>
    </Properties>
    <Loggers>
        <Logger name="Zomato.controller.TestController" level="INFO"
                additivity="false">
            <Appender-ref ref="FILE_APPENDER" level="INFO" />
        </Logger>


    </Loggers>

    <Appenders>
        <Async name="FILE_APPENDER" blocking="false">
            <AppenderRef ref="TimeIt"/>
        </Async>

        <RollingFile name="TimeIt" fileName="${sys:catalina.base}/logs/timeIt.log"
                     filePattern="${sys:catalina.base}/logs/timeIt-%d{yyyy-MM-dd-HH}.log"
                     ignoreExceptions="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %p %t %c %m %n" />
            <TimeBasedTriggeringPolicy/>
        </RollingFile>
    </Appenders>
</Configuration>
